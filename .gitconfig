[user]
	name = Jesper
	email = ttytyper@users.noreply.github.com
	signingkey = 0x2170135805AEC3CE
[core]
	excludesfile = ~/.gitignore
[color]
	diff = true
[merge]
	tool = vimdiff
[alias]
	# Funky layout, modified from this:
	# https://stackoverflow.com/a/9074343
	graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	pushall = !git remote | xargs -L1 git push --all
[push]
	default = simple
[commit]
	gpgsign = true
	verbose = true
[annex]
	sshcaching = true
	autoupgraderepository = false
[bash]
	showDirtyState=true
[tag]
	gpgSign = true
[init]
	defaultBranch = main
[safe]
	directory = /home/jesper/.espressif/esp-matter/connectedhomeip/connectedhomeip
